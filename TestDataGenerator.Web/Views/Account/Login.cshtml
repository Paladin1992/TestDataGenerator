@using TestDataGenerator.Web.Models
@using TestDataGenerator.Resources
@model LoginViewModel
@{
    ViewBag.Title = Messages.Title_Login;
}

<h2>@ViewBag.Title</h2>

<div class="form-horizontal">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { id = "email", placeholder = Messages.Placeholder_Email, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { id = "password", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="form-group">
            <div class="alert-success">
                @TempData["PasswordChanged"]
            </div>
            <div class="alert-danger">
                @Html.ValidationSummary(true)
            </div>
        </div>

        <div class="form-group">
            @Html.ActionLink(Messages.Link_Caption_ForgottenPassword, "ForgottenPassword", "Account")
        </div>

        <div class="form-group">
            <input type="submit" class="form-control btn btn-primary" value="@Messages.Button_Caption_Login" />
        </div>

        <div>
            @Html.ActionLink(Messages.Link_Caption_Back, "Index", "Home")
        </div>
    }
</div>