@using TestDataGenerator.Web.Models
@using TestDataGenerator.Resources
@model RegisterViewModel
@{
    ViewBag.Title = Messages.Title_Register;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="form-horizontal">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { id = "name", placeholder = Messages.Placeholder_Name, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { id = "email", placeholder = Messages.Placeholder_Email, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password, new { id = "password", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="alert-warning">
            <ul>
                <li>@string.Format(Messages.Warn_Pw_MinLength, 6)</li>
                <li>@Messages.Warn_Pw_MissingDigit</li>
                <li>@Messages.Warn_Pw_MissingLowercase</li>
                <li>@Messages.Warn_Pw_MissingUppercase</li>
                <li>@Messages.Warn_Pw_MissingSpecial</li>
                <li>@Messages.Warn_Pw_MustStartWithAlphanumeric</li>
            </ul>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.PasswordFor(model => model.ConfirmPassword, new { id = "password2", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <div class="form-group">
            <div class="alert-danger">
                @Html.ValidationSummary(true)
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="form-control btn btn-primary" value="@Messages.Button_Caption_Register" />
        </div>
    }
</div>